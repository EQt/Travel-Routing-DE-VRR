#compdef efa

typeset -a arguments
arguments=(
	'--from:city: :stop: '
	'--to:city: :stop: '
	'--via:city: :stop: '
	'--debug'
	'(--depart --arrive)--time:time'
	'(--depart --time)--arrive:time'
	'(--arrive --time)--depart:time'
	'--date:date'
	'--max-change:number'
	'--prefer:type:(speed nowait nowalk)'
	'--proximity'
	'--restrict:type:(local ic ice)'
	'--ignore-info:regex'
	'*--post:POST key=value'
)

_arguments -s $arguments
